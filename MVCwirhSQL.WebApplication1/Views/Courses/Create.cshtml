
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h3>Add New Courses</h3>
<div class="container">
    @{ Html.BeginForm();}
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Courses Name")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("name")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Courses Price")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("price")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-3">
           <input type="submit" value="Save" class="btn btn-success"/>
        </div>
    </div>
    @{Html.EndForm();}
</div>
