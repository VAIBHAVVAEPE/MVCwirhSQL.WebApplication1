
@{
    ViewData["Title"] = "Edit";
}

<h3>Edit Employe</h3>
<div class="container">
    @{ Html.BeginForm();}
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Employe Name")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Emp name",(string)ViewBag.Emp_Name)
        </div>
    </div>
     <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Dep Name")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Dep Name")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Employe Salary")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Emp Salary", (decimal)ViewBag.Emp_Salary)
            @Html.Hidden("id", (int)ViewBag.Id)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-3">
            <input type="submit" value="Update" class="btn btn-warning" />
        </div>
    </div>
    @{Html.EndForm();}
</div>

