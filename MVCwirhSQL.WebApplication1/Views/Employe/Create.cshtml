
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h3>Add New Product</h3>
<div class="container">
    @{ Html.BeginForm();}
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Employe Name")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Emp Name")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Dep Name")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Dep Name")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Employe Salary")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Emp Salary")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-3">
           <input type="submit" value="Save" class="btn btn-success"/>
        </div>
    </div>
    @{Html.EndForm();}
</div>

